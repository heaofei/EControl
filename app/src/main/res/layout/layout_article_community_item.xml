<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_comment_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_gray_bg_selector"
    android:orientation="vertical"
    android:paddingLeft="20px"
    android:paddingRight="20px"
    android:paddingTop="20px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="36px"
        android:paddingRight="36px">

        <com.mxkj.econtrol.widget.CircleImageView
            android:id="@+id/imv_header_pic"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_no_head"
            app:border_color="#80e5e5e5"
            app:border_overlay="true"
            app:border_width="0px"
            app:layout_auto_baseheight="width" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@+id/imv_header_pic"
            android:text=""
            android:textColor="@color/text_black_999"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_name"
            android:layout_marginLeft="26px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@+id/imv_header_pic"
            android:text=""
            android:textColor="@color/text_black_999"
            android:textSize="24px" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="4px"
                android:clickable="true"
                android:src="@drawable/ic_information_list_fabulous_default"
                app:layout_auto_baseheight="width"
                android:padding="24px"

                />

            <TextView
                android:id="@+id/tv_start_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:text=""
                android:textColor="@color/text_black_333"
                android:textSize="20px"
                android:layout_marginTop="22px"
                />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="132px"
        android:layout_marginRight="36px"
        android:layout_marginTop="30px"
        android:text=""
        android:textColor="@color/text_black_666"
        android:textSize="28px" />

    <TextView
        android:id="@+id/tv_reply_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="132px"
        android:layout_marginRight="36px"
        android:layout_marginTop="30px"
        android:background="@drawable/layout_radius_grey26"
        android:paddingBottom="6px"
        android:paddingLeft="16px"
        android:paddingRight="16px"
        android:paddingTop="6px"
        android:text=""
        android:textColor="@color/text_black_666"
        android:textSize="24px"
        android:visibility="gone" />

    <View
        style="@style/view_line"
        android:layout_marginLeft="40px"></View>


</LinearLayout>