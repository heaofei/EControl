<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="@drawable/layout_radius_white"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38px"
            android:gravity="center"
            android:paddingLeft="16px"
            android:paddingRight="16px"
            android:text="Title"
            android:textColor="@color/com_black"
            android:textSize="36px"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:layout_marginTop="22px"
            android:clickable="false"
            android:gravity="center"
            android:text="content"
            android:textColor="@color/light_black"
            android:textSize="26px"
            android:layout_gravity="center_horizontal"
            ></TextView>


        <EditText
            android:id="@+id/ed_content"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            android:textSize="26px"
            android:textColor="@color/text_black_666"
            android:layout_marginTop="40px"
            android:background="@drawable/layout_edittext_bg_grey"
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:maxLength="8"
            />

        <View
            style="@style/view_line"
            android:layout_marginTop="24px"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/layout_press_selector_left"
                android:text="取消"
                android:textColor="@color/com_blue"
                android:textSize="34px"
                android:textStyle="bold"
                />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/view_light_grey" />
            <Button
                android:id="@+id/bt_confirm"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/layout_press_selector_right"
                android:text="保存"
                android:textColor="@color/com_blue"
                android:textSize="34px"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>