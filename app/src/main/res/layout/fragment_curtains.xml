<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/com_white"
    >

    <RelativeLayout
        android:layout_width="610px"
        android:layout_height="400px"
        android:orientation="vertical"
        android:layout_marginTop="200px"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_cl_background"
            android:scaleType="fitXY"
            />
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/iv_gifView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
    </RelativeLayout>



    <ImageView
        android:id="@+id/iv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:src="@drawable/ic_cu_stop"
        android:visibility="invisible"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80px"
        android:layout_gravity="center_horizontal"
        >




    <Button
        android:id="@+id/bt_bt_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_iv_open"
        android:layout_gravity="center_vertical"
        />


    <Button
        android:id="@+id/bt_bt_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_iv_play"
        android:layout_gravity="center_vertical"
        />

    <Button
        android:id="@+id/bt_bt_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_iv_close"
        android:layout_gravity="center_vertical"
        />

    </LinearLayout>

</LinearLayout>