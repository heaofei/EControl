<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="vertical"
    android:background="@color/com_white"
    android:id="@+id/ll_comment_item"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/view_light_grey"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="32px"
        android:paddingRight="32px"
        >
        <com.mxkj.econtrol.utils.gateway.ContainsEmojiEditText
            android:id="@+id/ed_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:hint="说点什么吧..."
            android:paddingLeft="8px"
            android:textColor="@color/text_black_666"
            android:textColorHint="@color/text_black_c3c3c3"
            android:textSize="28px"
            android:background="@drawable/layout_radius_white12"
            android:layout_toLeftOf="@+id/ll_count"
            android:layout_marginTop="12px"
            android:layout_marginBottom="12px"
            android:layout_marginRight="24px"
            />

        <LinearLayout
            android:id="@+id/ll_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/tv_send_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_black_c3c3c3"
                android:textSize="28px"
                android:visibility="visible"
                android:text="发布"
                android:layout_toRightOf="@+id/iv_collection"
                android:layout_gravity="center_vertical"
                android:paddingTop="12px"
                android:paddingBottom="12px"
                android:paddingRight="12px"
                android:paddingLeft="12px"
                />

        </LinearLayout>
    </RelativeLayout>

    </LinearLayout>
</LinearLayout>