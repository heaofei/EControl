<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200px"
    android:background="@drawable/layout_ag_radius_gray_bg"
    android:layout_margin="22px"
    android:clickable="true"
    android:id="@+id/rl_item"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:id="@+id/imv_ag_state"
            android:layout_width="64px"
            android:layout_height="64px"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_window_default"
            android:layout_marginTop="36px"
            />
        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_window_edit"
            android:visibility="invisible"
            />

    <TextView
        android:id="@+id/tv_ag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16px"
        android:layout_marginBottom="18px"
        android:gravity="center"
        android:text=""
        android:textColor="@color/text_black_999"
        android:textSize="26px"
        android:layout_below="@+id/imv_ag_state"
        />
    </RelativeLayout>

</RelativeLayout>