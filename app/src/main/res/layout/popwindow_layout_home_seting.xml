<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#80000000"
        android:weightSum="7"
        >
        <View
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight="4"
            ></View>


        <RelativeLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_weight="3"
            >

            <ImageView
                android:id="@+id/iv_title"
                android:layout_width="26px"
                android:layout_height="11px"
                android:layout_gravity="center"
                android:src="@drawable/home_navbar_listbg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16px"
                />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_radius_white12"
            android:orientation="vertical"
            android:layout_below="@+id/iv_title"
            >
            <View
                android:layout_width="wrap_content"
                android:layout_height="18px"
                ></View>
            <RelativeLayout
                android:id="@+id/rl_scene_edit"
                style="@style/FragmentMy_RelativeLayout"
                android:background="@drawable/photo_camera_selector"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="16px"
                    android:gravity="center"
                    android:text="编辑模式"
                    android:textSize="30px"
                    android:textColor="@color/text_black_999"
                    android:drawableLeft="@drawable/ic_home_setting_edit"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    />
                <View
                    style="@style/view_line"
                    android:layout_alignParentBottom="true"
                    ></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_scene_new"
                style="@style/FragmentMy_RelativeLayout"
                android:background="@drawable/photo_camera_selector"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="16px"
                    android:gravity="center"
                    android:text="新增场景"
                    android:textSize="30px"
                    android:textColor="@color/text_black_999"
                    android:drawableLeft="@drawable/ic_home_setting_add"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    />
                <View
                    style="@style/view_line"
                    android:layout_alignParentBottom="true"
                    ></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_edit_device"
                style="@style/FragmentMy_RelativeLayout"
                android:background="@drawable/photo_camera_selector"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="16px"
                    android:gravity="center"
                    android:text="编辑部件"
                    android:textSize="30px"
                    android:textColor="@color/text_black_999"
                    android:drawableLeft="@drawable/ic_home_setting_edit"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    />
                <View
                    style="@style/view_line"
                    android:layout_alignParentBottom="true"
                    ></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_timing"
                style="@style/FragmentMy_RelativeLayout"
                android:background="@drawable/photo_camera_selector"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="16px"
                    android:gravity="center"
                    android:text="定时"
                    android:textSize="30px"
                    android:textColor="@color/text_black_999"
                    android:drawableLeft="@drawable/ic_home_setting_timing"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    />
                <View
                    style="@style/view_line"
                    android:layout_alignParentBottom="true"
                    ></View>
            </RelativeLayout>



        </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>