<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/com_white"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="22px">

        <cn.jzvd.JZVideoPlayerStandard
            android:id="@+id/videoplayer_item"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            android:layout_marginTop="22px"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/com_white"
            android:textSize="32px"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|right"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_information_list_playback"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:minWidth="30dp"
            android:padding="5dp"
            android:text="0"
            android:textColor="@color/com_white"
            android:textSize="12sp"
            android:visibility="gone"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="22px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="22px">

        <TextView
            android:id="@+id/tv_video_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_video_collection"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="来源："
            android:textSize="12sp"
            android:textColor="@color/text_black_666al60"
            />

        <ImageView
            android:id="@+id/tv_video_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60px"
            android:layout_toLeftOf="@+id/iv_video_comment"
            android:drawablePadding="6px"
            android:src="@drawable/ic_information_list_collection_default" />

        <ImageView
            android:id="@+id/iv_video_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60px"
            android:layout_toLeftOf="@+id/iv_video_thumbup"
            android:drawablePadding="6px"
            android:src="@drawable/ic_information_list_comment" />

        <ImageView
            android:id="@+id/iv_video_thumbup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60px"
            android:layout_toLeftOf="@+id/iv_video_share"
            android:drawablePadding="6px"
            android:src="@drawable/ic_information_list_fabulous_default" />

        <ImageView
            android:id="@+id/iv_video_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="6px"
            android:src="@drawable/ic_information_list_share" />

    </RelativeLayout>

    <View
        android:layout_height="8px"
        style="@style/view_line"
        android:background="#FFF2F2F2"
        ></View>

</LinearLayout>

