<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/com_white">

    <RelativeLayout
        android:layout_width="700px"
        android:layout_height="350px">

        <RelativeLayout
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="76px"
            android:layout_marginTop="103px">

            <ImageView
                android:id="@+id/imv_low_wind"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/ic_low_wind" />

            <TextView
                android:id="@+id/tv_low_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imv_low_wind"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20px"
                android:text="@string/low_wind_speed"
                android:textColor="#333333"
                android:textSize="24px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="294px"
            android:layout_marginTop="103px">

            <ImageView
                android:id="@+id/imv_midle_wind"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/ic_midle_wind"
                app:layout_auto_baseheight="width" />

            <TextView
                android:id="@+id/tv_midle_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imv_midle_wind"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20px"
                android:text="@string/midle_wind_speed"
                android:textColor="#333333"
                android:textSize="24px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="516px"
            android:layout_marginTop="103px">

            <ImageView
                android:id="@+id/imv_high_wind"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/ic_high_wind"
                app:layout_auto_baseheight="width" />

            <TextView
                android:id="@+id/tv_high_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imv_high_wind"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26px"
                android:text="@string/high_wind_speed"
                android:textColor="#333333"
                android:textSize="24px" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>