<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="1px"
android:id="@+id/item_layout"
android:orientation="vertical"
android:background="@color/com_white">

<RelativeLayout
    android:id="@+id/rl_select_house_estate"
    style="@style/FragmentMy_RelativeLayout_Prass"
    android:layout_height="112px"
    >
    <TextView
        android:id="@+id/tv_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text=""
        android:textColor="@color/text_black_666"
        android:textSize="32px" />


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/in_home_button_off"
        android:drawablePadding="12px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>

<LinearLayout
    android:id="@+id/ll_brightness"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible"
    >
    <View
        style="@style/view_line"
        android:layout_marginLeft="36px"
        ></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="亮度"
        android:layout_marginLeft="36px"
        android:layout_marginTop="22px"
        android:textSize="24px"
        android:textColor="@color/text_black_666"
        />

    <SeekBar
        android:id="@+id/seekbar_light"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:max="99"
        android:maxHeight="4dp"
        android:minHeight="1dp"
        android:paddingBottom="20px"
        android:paddingTop="20px"
        android:progressDrawable="@drawable/progress_drawable"
        android:secondaryProgress="0"
        android:thumb="@drawable/icon_control_point_2"
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="10px"
        android:layout_marginBottom="20px"
        />

</LinearLayout>

<View
    style="@style/view_line20"
    android:layout_height="16px"
    android:background="#f5f5f5"
    ></View>


</LinearLayout>