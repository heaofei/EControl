<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    android:id="@+id/item_layout"
    android:orientation="horizontal"
    android:background="@drawable/white_gray_bg_selector">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@color/com_white"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@color/text_black_666"
            android:textSize="120px"
            android:layout_marginLeft="32px"
            />

        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_999"
            android:textSize="28px"
            android:src="@drawable/icon_btn_off"
            android:layout_marginRight="20px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_right"
            android:paddingBottom="20px"
            android:paddingTop="20px"
            android:paddingLeft="40px"
            />
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/center_enter"
            android:textSize="28px"
            android:layout_marginRight="24px"
            />

        <View
            style="@style/view_line"
            android:layout_alignParentBottom="true"
            ></View>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_delete"
        android:layout_width="150px"
        android:layout_height="match_parent"
        android:background="@color/text_reg"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/com_white"
        android:textSize="30px" />


</LinearLayout>