<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/com_white"
    tools:context="com.mxkj.econtrol.ui.activity.AboutActivity">
    <include layout="@layout/incloud_title_layout2"></include>



    <com.mxkj.econtrol.widget.MyLinearLayout
        android:id="@+id/ll_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:visibility="gone"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10px"
            android:paddingTop="10px"
            android:background="@color/com_white"
            ></android.support.v7.widget.RecyclerView>
    </com.mxkj.econtrol.widget.MyLinearLayout>

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >
        <LinearLayout
            android:id="@+id/ll_statue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="280px"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tv_tips"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未找到可绑定网关"
                android:textSize="32px"
                android:textColor="@color/text_black_333"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="28px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.请确认主机已接通电源；"
                android:textSize="28px"
                android:textColor="@color/text_black_999"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.请确认主机与手机连接到相同路由器。"
                android:textSize="28px"
                android:textColor="@color/text_black_999"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16px"
                />


        </LinearLayout>


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/iv_gifView"
            android:layout_width="500px"
            android:layout_height="320px"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:src="@drawable/ic_wangguang"
            android:layout_above="@+id/tv_tips"
            android:layout_marginBottom="160px"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请将主机接通网络和电源"
            android:textSize="28px"
            android:textColor="@color/text_black_999"
            android:layout_above="@+id/btn_search"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="154px"
            android:visibility="visible"
            />
    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginRight="106px"
        android:layout_marginLeft="106px"
        android:background="@drawable/login_regist_bg"
        android:text="开始绑定"
        android:textSize="30px"
        android:textColor="@color/com_white"
        android:layout_marginBottom="180px"
        android:layout_alignParentBottom="true"
        />
    </RelativeLayout>


</LinearLayout>
