<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/com_white"
    tools:context="com.mxkj.econtrol.view.activity.InformationInfoActivity">


    <include
        layout="@layout/incloud_title_layout2"
        ></include>


    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="166px"
        >

        <com.mxkj.econtrol.widget.CircleImageView
            android:id="@+id/imv_header"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:src="@drawable/ic_no_head"
            app:border_color="#80e5e5e5"
            app:border_overlay="true"
            app:border_width="0px"
            app:layout_auto_baseheight="width" />
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="24px"
            android:drawablePadding="12px"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_black_666"
            android:textSize="32px"
            android:layout_toRightOf="@+id/imv_header"
            android:layout_marginLeft="40px"
            />
        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="46px"
            android:drawablePadding="12px"
            android:src="@drawable/ic_home_setting_edit"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_black_999"
            android:textSize="28px"
            android:visibility="visible"
            />
    </RelativeLayout>

    <View style="@style/view_line"
        ></View>


    <RelativeLayout
        android:id="@+id/rl_comment"
        style="@style/FragmentMy_RelativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="我的评论"
            android:textColor="@color/text_black_666"
            android:textSize="32px" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/center_enter"
            android:drawablePadding="24px" />

    </RelativeLayout>

    <View style="@style/view_line"
        ></View>


 <RelativeLayout
     android:id="@+id/rl_collectionup"
     style="@style/FragmentMy_RelativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="我的收藏"
            android:textColor="@color/text_black_666"
            android:textSize="32px" />



     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:drawableLeft="@drawable/center_enter"
         android:drawablePadding="24px" />



    </RelativeLayout>

    <View style="@style/view_line"
        ></View>



</LinearLayout>
