<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_radius_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16px"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_Mon"
            style="@style/FragmentMy_RelativeLayout_Prass">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="每周一"
                android:textColor="@color/text_black_666"
                android:textSize="32px" />

            <ImageView
                android:id="@+id/iv_Mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/home_edit_choose_default32" />

        </RelativeLayout>

        <View
            style="@style/view_line"
            android:layout_marginLeft="36px"></View>

        <RelativeLayout
            android:id="@+id/rl_Tue"
            style="@style/FragmentMy_RelativeLayout_Prass">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="每周二"
                android:textColor="@color/text_black_666"
                android:textSize="32px" />

            <ImageView
