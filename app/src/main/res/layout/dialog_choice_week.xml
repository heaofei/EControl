        <Button
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="确定"
            android:textColor="@color/com_red"
            android:textSize="30px" />


    </LinearLayout>

