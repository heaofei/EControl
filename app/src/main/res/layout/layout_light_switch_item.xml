<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/com_white"
    android:clickable="true"
    android:id="@+id/rl_item"
    >

    <ImageView
        android:id="@+id/imv_light_state"
        android:layout_width="86px"
        android:layout_height="86px"
        android:src="@drawable/light_ordinary"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="36px"
        android:layout_marginTop="36px"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/imv_light_state"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32px"
        >
    <TextView
        android:id="@+id/tv_light_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text=""
        android:textColor="@color/text_black_333"
        android:textSize="32px"
        android:layout_marginTop="38px"
        />
        <ImageView
            android:id="@+id/iv_statue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_light_state_off"
            android:layout_marginTop="12px"
            android:layout_marginBottom="38px"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_open"
        android:layout_width="98px"
        android:layout_height="98px"
        android:src="@drawable/ic_light_turnoff"
        android:layout_marginLeft="24px"
        android:layout_centerVertical="true"
        android:layout_marginRight="14px"
        android:layout_toLeftOf="@+id/tv"
        />
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/center_enter"
        android:drawablePadding="12px"
        android:layout_marginRight="24px"
        />
    <View
        style="@style/view_line"
        android:layout_alignParentBottom="true"
        ></View>

</RelativeLayout>