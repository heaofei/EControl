<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_house_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mxkj.econtrol.view.activity.MyHouseListActivity">


    <include layout="@layout/incloud_title_layout2"></include>


    <com.mxkj.econtrol.widget.MyLinearLayout
        android:id="@+id/ll_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/com_white"
        android:layout_below="@+id/title">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="true"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_keep"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:background="@drawable/login_regist_bg_white"
                    android:text="保存当前模式"
                    android:gravity="center"
                    android:textColor="@color/text_orangereg02"
                    android:textSize="30px"
                    android:layout_marginTop="136px"
                    android:layout_marginBottom="40px"
                    android:layout_marginRight="108px"
                    android:layout_marginLeft="108px"
                    />



            </LinearLayout>

        </ScrollView>
    </com.mxkj.econtrol.widget.MyLinearLayout>


</LinearLayout>
