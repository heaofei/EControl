<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    android:id="@+id/item_layout"
    android:orientation="vertical"
    android:background="@color/com_white">

    <RelativeLayout
        android:id="@+id/rl_select_house_estate"
        style="@style/FragmentMy_RelativeLayout"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/text_black_666"
            android:textSize="28px"
            android:layout_marginLeft="6px"
            android:layout_toRightOf="@+id/iv_number"
            />
        <ImageView
            android:id="@+id/iv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="32px"
            />


        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/text_black_999"
            android:textSize="28px"
            android:layout_marginLeft="24px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"
            />

    </RelativeLayout>

    <View
        style="@style/view_line"
        android:layout_marginRight="24px"
        android:layout_marginLeft="24px"
        ></View>


</LinearLayout>