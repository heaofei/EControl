<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_background_grey"
    android:orientation="vertical"
    tools:context=".view.activity.UserInfoModifyActivity"
    android:focusableInTouchMode="true"
    >

    <include layout="@layout/incloud_title_layout2"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/rl_item"
            android:layout_width="match_parent"
            android:layout_height="166px"
            android:background="@color/com_white">
            <com.mxkj.econtrol.widget.CircleImageView
                android:id="@+id/imv_header"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32px"
                android:src="@drawable/ic_no_head"
                app:border_color="#80e5e5e5"
                app:border_overlay="true"
                app:layout_auto_baseheight="width" />

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="36px"
                android:drawablePadding="30px"
                android:drawableRight="@drawable/center_enter"
                android:gravity="center"
                android:text="@string/user_info_edit_head"
                android:textColor="@color/text_black_999"
                android:textSize="28px"
                android:paddingBottom="30px"
                android:paddingTop="30px"
                android:paddingLeft="60px"
                />
        </RelativeLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/com_white"
    android:layout_marginTop="20px"
    >
        <RelativeLayout
            style="@style/FragmentMy_RelativeLayout"
            >
            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="昵称"
                android:textColor="@color/text_black_333"
                android:textSize="32px" />
            <EditText
                android:id="@+id/edit_nice_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_nick"
                android:background="@null"
                android:gravity="right|center"
                android:hint="昵称"
                android:maxLength="13"
                android:paddingLeft="10px"
                android:paddingRight="46px"
                android:textColor="@color/text_black_999"
                android:textColorHint="#cccccc"
                android:textSize="28px"
                />

        </RelativeLayout>


        <View style="@style/view_line"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            ></View>
        <RelativeLayout style="@style/FragmentMy_RelativeLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="性别"
                android:textColor="@color/text_black_333"
                android:textSize="32px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imv_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="12px"
                    android:src="@drawable/center_userinfo_choose_default" />

                <TextView
                    android:id="@+id/tv_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/male"
                    android:textSize="28px"
                    android:layout_gravity="center_vertical"
                    android:padding="12px"
                    android:textColor="@color/text_black_999"
                    />

                <ImageView
                    android:id="@+id/imv_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50px"
                    android:padding="12px"
                    android:src="@drawable/center_userinfo_choose_default" />

                <TextView
                    android:id="@+id/tv_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/female"
                    android:textColor="@color/text_black_999"
                    android:textSize="28px"
                    android:layout_marginLeft="12px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="46px"
                    />
            </LinearLayout>


        </RelativeLayout>

        <View style="@style/view_line"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            ></View>


        <RelativeLayout style="@style/FragmentMy_RelativeLayout">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/user_info_real_name"
                android:textColor="@color/text_black_333"
                android:textSize="32px" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_name"
                android:background="@null"
                android:gravity="right|center"
                android:hint="@string/user_info_esit_real_name"
                android:maxLength="13"
                android:paddingLeft="10px"
                android:layout_marginRight="46px"
                android:textColor="@color/text_black_999"
                android:textColorHint="#cccccc"
                android:textSize="28px" />

        </RelativeLayout>


        <View style="@style/view_line"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            ></View>

        <RelativeLayout
            android:id="@+id/rl_birthday"
            style="@style/FragmentMy_RelativeLayout_Prass"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="生日"
                android:textColor="@color/text_black_333"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_both"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="30px"
                android:drawableRight="@drawable/center_enter"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_black_999"
                android:textSize="28px" />


        </RelativeLayout>

        <View style="@style/view_line"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            ></View>

        <RelativeLayout
            android:id="@+id/rl_address"
            style="@style/FragmentMy_RelativeLayout_Prass">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="所在地"
                android:textColor="@color/text_black_333"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="30px"
                android:drawableRight="@drawable/center_enter"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_black_999"
                android:textSize="28px" />
        </RelativeLayout>

    <View style="@style/view_line"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        ></View>


</LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:visibility="gone">

            <ImageView
                android:layout_width="46px"
                android:layout_height="46px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24px"
                android:src="@drawable/ic_delivery"
                app:layout_auto_baseheight="width" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="100px"
                android:background="@null"
                android:hint="邮箱"
                android:singleLine="true"
                android:textColor="#444444"
                android:textColorHint="#cccccc"
                android:textSize="28px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e5e5e5e5" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
