<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_white"
    android:orientation="vertical">


    <View
        android:id="@+id/view_title_line"
        android:layout_width="wrap_content"
        android:layout_height="72px"
        android:visibility="gone"></View>

    <RelativeLayout
        android:layout_width="424px"
        android:layout_height="256px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48px"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_floorheat_bg" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/iv_gifView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/view_center_line"
        android:layout_width="wrap_content"
        android:layout_height="40px"
        ></View>

    <RelativeLayout
        android:id="@+id/rl_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66px"
        >
        <TextView
            android:id="@+id/tv_temperature_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textColor="@color/text_black_999"
            android:text="当前温度"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_orangereg02"
            android:textSize="86sp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tv_temperature_type"
            />


        <ImageView
            android:id="@+id/iv_temperature_reduce"
            android:layout_width="124px"
            android:layout_height="124px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/floorheat_temp_reduce_bg_selector"
            android:layout_toLeftOf="@+id/tv_temperature"
            android:layout_centerVertical="true"
            android:layout_marginRight="68px"
            android:padding="24px"
            />

        <ImageView
            android:id="@+id/iv_temperature_add"
            android:layout_width="124px"
            android:layout_height="124px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/floorheat_temp_add_bg_selector"
            android:layout_toRightOf="@+id/tv_temperature"
            android:layout_centerVertical="true"
            android:layout_marginLeft="68px"
            android:padding="24px"
            />
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:layout_marginTop="86px"
            android:layout_toRightOf="@+id/tv_temperature"
            android:text="°C"
            android:textColor="@color/text_orangereg02"
            android:textSize="36px"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80px"
        android:orientation="vertical"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/tv_room_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:text=""
            android:textColor="@color/text_orangereg02"
            android:textSize="30px"
            />

        <Button
            android:id="@+id/bt_bt_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_bt_closed"
            android:layout_marginTop="24px"
            />
    </LinearLayout>










</LinearLayout>