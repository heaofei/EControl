<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".view.activity.LoginActivity">



    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160px"
        android:orientation="vertical"
        >
    <ImageView
        android:id="@+id/iv_hear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo03"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/tv_zhizao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26px"
        android:text="智  造  好  生  活 "
        android:textColor="@color/com_white"
        android:textSize="28px"
        android:layout_gravity="center_horizontal"
        />
    </LinearLayout>


    <com.mxkj.econtrol.widget.MyScrollView
        android:id="@+id/myscrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90px"
                        android:layout_marginLeft="100px"
                        android:layout_marginRight="100px"
                        android:layout_marginTop="520px"
                        >

                        <ImageView
                            android:id="@+id/iv01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/signin_icon_phone" />

                        <com.mxkj.econtrol.widget.ClearEditText
                            android:id="@+id/edit_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="24px"
                            android:layout_toRightOf="@+id/iv01"
                            android:background="@null"
                            android:ellipsize="end"
                            android:hint="请输入手机号码"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:maxLength="13"
                            android:text=""
                            android:textColor="@color/com_white"
                            android:textColorHint="@color/com_white40"
                            android:textSize="14sp"

                            />
                    </RelativeLayout>


                    <View
                        style="@style/view_line"
                        android:layout_marginBottom="6px"
                        android:layout_marginLeft="100px"
                        android:layout_marginRight="100px"
                        android:layout_marginTop="6px"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90px"
                        android:layout_marginLeft="100px"
                        android:layout_marginRight="100px"
                        android:layout_marginTop="22px">

                        <ImageView
                            android:id="@+id/iv03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/signin_icon_password" />

                        <com.mxkj.econtrol.widget.ClearEditText
                            android:id="@+id/edt_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="24px"
                            android:layout_toLeftOf="@+id/iv_password_visibility"
                            android:layout_toRightOf="@+id/iv03"
                            android:background="@null"
                            android:ellipsize="end"
                            android:hint="请输入密码"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:maxLength="16"
                            android:textColor="@color/com_white"
                            android:textColorHint="@color/com_white40"
                            android:textSize="14sp"
                            android:text=""
                            />

                        <ImageView
                            android:id="@+id/iv_password_visibility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="10px"
                            android:scaleType="centerInside"
                            android:src="@drawable/display"
                            android:visibility="gone" />
                    </RelativeLayout>
                    <View
                        style="@style/view_line"
                        android:layout_marginLeft="100px"
                        android:layout_marginRight="100px"
                        android:layout_marginTop="6px"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100px"
                        android:layout_marginRight="100px"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tv_forgot_pass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15px"
                            android:text="@string/forgot_password"
                            android:textColor="@color/com_white"
                            android:textSize="28px" />

                        <TextView
                            android:id="@+id/tv_regist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="15px"
                            android:text="@string/new_count_regist"
                            android:textColor="@color/com_white"
                            android:textSize="28px" />
                    </RelativeLayout>


                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="86px"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8px"
                        android:layout_marginLeft="105px"
                        android:layout_marginRight="105px"
                        android:layout_marginTop="100px"
                        android:background="@drawable/login_regist_bg_white_alpha40"
                        android:enabled="true"
                        android:gravity="center"
                        android:text="@string/login"
                        android:textColor="#5F5F5F" />
                </LinearLayout>



    </com.mxkj.econtrol.widget.MyScrollView>


    <TextView
        android:id="@+id/tv_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/center_back"
        android:drawablePadding="8px"
        android:gravity="center"
        android:padding="24px"
        android:text=""
        android:textColor="@color/com_white"
        android:textSize="36px"
        />



</RelativeLayout>

