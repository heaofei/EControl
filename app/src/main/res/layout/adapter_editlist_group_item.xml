<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_white"
    android:orientation="vertical">

    <View
        android:id="@+id/viewline"
        style="@style/view_line20"></View>

    <RelativeLayout
        android:id="@+id/rl_group_item"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:paddingRight="36px">

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="37px"
            android:text=""
            android:textColor="@color/text_black_666"
            android:textSize="34px"
            />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="28px"
            android:layout_height="28px"
            android:textColor="@color/com_white"
            android:background="@drawable/bg_shape_reg_count"
            android:gravity="center"
            android:textSize="10dp"
            android:layout_toRightOf="@+id/tv_group_name"
            android:text=""
            android:layout_marginLeft="14px"
            android:layout_marginTop="26px"
            android:visibility="gone"

            />



        <ImageView
            android:id="@+id/iv_group_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/center_enter"
            />


    </RelativeLayout>

    <View
        android:id="@+id/viewline1"
        style="@style/view_line"></View>


</LinearLayout>