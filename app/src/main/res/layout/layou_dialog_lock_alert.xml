<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_radius_white"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginLeft="76px"
        android:layout_marginRight="76px"
        >

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24px"
            android:src="@drawable/ic_lock_alert"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36px"
            android:gravity="center"
            android:paddingLeft="16px"
            android:paddingRight="16px"
            android:text="非法开锁"
            android:textColor="@color/text_black_333"
            android:textSize="34px" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:layout_marginTop="26px"
            android:background="@android:color/white"
            android:clickable="false"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_black_999"
            android:textSize="26px"></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66px"
            android:layout_marginTop="48px"
            android:orientation="horizontal"
            android:layout_marginBottom="32px"
            >


            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="知道了"
                android:background="@drawable/login_regist_bg"
                android:textColor="@color/com_white"
                android:textSize="16sp"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>