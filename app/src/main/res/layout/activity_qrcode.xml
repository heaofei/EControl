<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/com_white"
    tools:context="com.mxkj.econtrol.ui.activity.AboutActivity">


    <TextView
        android:id="@+id/tv_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/com_black"
        android:layout_alignParentLeft="true"
        android:textSize="36px"
        android:text="关闭"
        android:gravity="center"
        android:drawablePadding="8px"
        android:padding="24px"
        />


    <TextView
        android:id="@+id/tv_building_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/text_black_666"
        android:textSize="36px"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_house_name"
        android:layout_marginBottom="16px"
        />
    <TextView
        android:id="@+id/tv_house_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/text_black_666"
        android:textSize="26px"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/iv_qrcode"
        android:layout_marginBottom="64px"
        />

    <ImageView
        android:id="@+id/iv_qrcode"
        android:layout_width="400px"
        android:layout_height="400px"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫描上方的二维码，即可加入房间。"
        android:textColor="@color/text_black_666"
        android:textSize="26px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_qrcode"
        android:layout_marginTop="32px"
        />


</RelativeLayout>
