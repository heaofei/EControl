<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_light_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_white"
    android:orientation="vertical"
    >
    <include layout="@layout/incloud_title_layout2"></include>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="@color/com_white"
        />

    <FrameLayout
        android:id="@+id/fragmen_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <View
        style="@style/view_line20"
        android:background="@color/view_background_grey"
        ></View>

    <RelativeLayout
        android:id="@+id/rl_relation"
        style="@style/FragmentMy_RelativeLayout_Prass"
        android:layout_height="100px"
        >
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关联部件"
            android:textColor="@color/text_black_666"
            android:textSize="32px"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_relation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="28px"
            android:textColor="@color/text_black_999"
            android:drawableRight="@drawable/center_enter"
            android:drawablePadding="16px"
            android:layout_toRightOf="@+id/tv"
            android:paddingLeft="16px"
            android:ellipsize="end"
            android:gravity="right"
            />


    </RelativeLayout>

    <View
        style="@style/view_line"
        ></View>


    <RelativeLayout
        android:id="@+id/rl_repeat"
        style="@style/FragmentMy_RelativeLayout_Prass"
        android:layout_height="100px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重复"
            android:textColor="@color/text_black_666"
            android:textSize="32px"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="28px"
            android:textColor="@color/text_black_999"
            android:drawableRight="@drawable/center_enter"
            android:drawablePadding="16px"
            />


    </RelativeLayout>
    <View
        style="@style/view_line"
        ></View>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/com_white"
        android:padding="36px"
        >
        <TextView
            android:id="@+id/tv_renwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定时任务"
            android:textColor="@color/text_black_666"
            android:textSize="32px"
            />

        <TextView
            android:id="@+id/tv_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启部件"
            android:textColor="@color/text_black_666"
            android:textSize="32px"
            android:layout_below="@+id/tv_renwu"
            android:layout_marginTop="36px"
            android:drawablePadding="16px"
            android:drawableLeft="@drawable/home_edit_choose_selected32"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭部件"
            android:textColor="@color/text_black_666"
            android:textSize="32px"
            android:layout_below="@+id/tv_renwu"
            android:layout_marginTop="36px"
            android:drawableLeft="@drawable/home_edit_choose_default32"
            android:drawablePadding="16px"
            android:layout_toRightOf="@+id/tv_open"
            android:layout_marginLeft="180px"
            android:gravity="center"
            />

    </RelativeLayout>
    <View
        style="@style/view_line"
        ></View>


    <TextView
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@drawable/login_regist_bg_white"
        android:text="删除定时"
        android:gravity="center"
        android:textColor="@color/text_orangereg02"
        android:textSize="30px"
        android:layout_marginTop="236px"
        android:layout_marginBottom="10px"
        android:layout_marginRight="108px"
        android:layout_marginLeft="108px"
        />

</LinearLayout>
