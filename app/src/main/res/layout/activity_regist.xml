<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_regist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_bg"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".view.activity.RegistActivity">


    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120px"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_hear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_logo03" />

        <TextView
            android:id="@+id/tv_zhizao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26px"
            android:text="智  造  好  生  活 "
            android:textColor="@color/com_white"
            android:textSize="28px" />
    </LinearLayout>


    <com.mxkj.econtrol.widget.MyScrollView
        android:id="@+id/myscrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:fillViewport="true"
        android:scrollbars="none">


        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10px"
            android:focusableInTouchMode="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:layout_marginTop="560px"
                >

                <ImageView
                    android:id="@+id/iv01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/signin_icon_phone" />

                <com.mxkj.econtrol.widget.ClearEditText
                    android:id="@+id/et_input_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24px"
                    android:layout_toRightOf="@+id/iv01"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入手机号码"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:textColor="@color/com_white"
                    android:textColorHighlight="@color/text_black_c3c3c3"
                    android:textColorHint="@color/com_white40"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                style="@style/view_line"
                android:layout_marginBottom="6px"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:layout_marginTop="6px"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px">

                <ImageView
                    android:id="@+id/iv02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/signup_iccon_code" />

                <com.mxkj.econtrol.widget.ClearEditText
                    android:id="@+id/et_input_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24px"
                    android:layout_marginRight="10px"
                    android:layout_toLeftOf="@+id/tv_get_code"
                    android:layout_toRightOf="@+id/iv02"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入验证码"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="8"
                    android:textColor="@color/com_white"
                    android:textColorHighlight="@color/text_black_c3c3c3"
                    android:textColorHint="@color/com_white40"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/com_white"
                    android:textSize="24px" />

            </RelativeLayout>

            <View
                style="@style/view_line"
                android:layout_marginBottom="6px"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:layout_marginTop="6px"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px">

                <ImageView
                    android:id="@+id/iv03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/signin_icon_password" />

                <com.mxkj.econtrol.widget.ClearEditText
                    android:id="@+id/et_input_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24px"
                    android:layout_toRightOf="@+id/iv03"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入密码"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textColor="@color/com_white"
                    android:textColorHighlight="@color/text_black_c3c3c3"
                    android:textColorHint="@color/com_white40"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/iv_password_visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10px"
                    android:scaleType="centerInside"
                    android:src="@drawable/display"
                    android:visibility="gone" />

            </RelativeLayout>


            <View
                style="@style/view_line"
                android:layout_marginBottom="6px"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:layout_marginTop="6px"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px">

                <ImageView
                    android:id="@+id/iv04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/signup_icon_reenter" />

                <com.mxkj.econtrol.widget.ClearEditText
                    android:id="@+id/et_input_repassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24px"
                    android:layout_toRightOf="@+id/iv04"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请再次输入密码"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textColor="@color/com_white"
                    android:textColorHint="@color/com_white40"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_repassword_visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10px"
                    android:scaleType="centerInside"
                    android:src="@drawable/display"
                    android:visibility="gone" />

            </RelativeLayout>


            <View
                style="@style/view_line"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:layout_marginTop="6px"></View>

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="88px"
                android:layout_marginRight="88px"
                android:layout_marginTop="60px"
                android:enabled="false"
                android:gravity="center"
                android:text="两次输入的密码不一致"
                android:textColor="@color/text_orangereg02"
                android:textSize="24px"
                android:visibility="invisible" />


            <Button
                android:id="@+id/btn_regist"
                style="@style/com_default_btn_bg"
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:layout_marginTop="16px"
                android:background="@drawable/login_regist_bg_white_alpha40"
                android:gravity="center"
                android:text="注册"
                android:textColor="#5F5F5F"
                android:textSize="32px" />


        </LinearLayout>


    </com.mxkj.econtrol.widget.MyScrollView>

    <TextView
        android:id="@+id/tv_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="48px"
        android:drawableLeft="@drawable/center_back"
        android:drawablePadding="8px"
        android:gravity="center"
        android:padding="24px"
        android:text=""
        android:textColor="@color/com_white"
        android:textSize="36px" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/private_policy_tip"
            android:textColor="#99ffffff"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6px"
            android:text="@string/private_policy_tip02"
            android:textColor="@color/text_orangereg02"
            android:textSize="24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="#99ffffff"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6px"
            android:text="@string/private_policy_tip03"
            android:textColor="@color/text_orangereg02"
            android:textSize="24px" />
    </LinearLayout>



</RelativeLayout>
