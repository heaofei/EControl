<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    android:id="@+id/item_layout"
    android:orientation="vertical"
    android:background="@color/com_white">

    <RelativeLayout
        android:id="@+id/rl_select_house_estate"
        style="@style/FragmentMy_RelativeLayout">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="灯"
            android:textColor="@color/text_black_666"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/iv_select_light_estate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="10px"
            android:src="@drawable/home_edit_choose_default"
            android:textSize="32px" />

    </RelativeLayout>

    <View
        style="@style/view_line"
        android:layout_marginRight="24px"
        android:layout_marginLeft="24px"
        ></View>


</LinearLayout>