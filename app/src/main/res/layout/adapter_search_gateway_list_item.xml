<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="128px"
    android:layout_marginBottom="1px"
    android:background="@color/com_white"
    android:orientation="vertical"
    android:paddingLeft="32px"
    android:paddingRight="32px">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_icon_wangguan" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px"
        android:drawablePadding="10px"
        android:padding="24px"
        android:text=""
        android:textColor="@color/text_black_333"
        android:textSize="32px"
        android:layout_toLeftOf="@+id/tv_add"
        android:layout_toRightOf="@+id/iv"
        />


    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22px"
        android:background="@drawable/login_regist_bg"
        android:paddingBottom="12px"
        android:paddingLeft="32px"
        android:paddingRight="32px"
        android:paddingTop="12px"
        android:text="绑定"
        android:textColor="@color/com_white"
        android:textSize="28px" />

    <View
        style="@style/view_line"
        android:layout_alignParentBottom="true"
        ></View>


</RelativeLayout>