<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="500px">


        <ImageView
            android:id="@+id/imv_top_bg"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/app_bg" />

        <ImageView
            android:id="@+id/imv_logo"
            android:layout_width="256px"
            android:layout_height="55px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38px"
            android:src="@drawable/ic_logo" />

        <com.mxkj.econtrol.widget.CircleImageView
            android:id="@+id/imv_header_pic"
            android:layout_width="168px"
            android:layout_height="168px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="156px"
            android:src="@drawable/login_portrait"
            app:border_color="#e5e5e5"
            app:border_overlay="true"
            app:border_width="10px"
            app:layout_auto_baseheight="width" />

        <ImageView

            android:layout_width="29px"
            android:layout_height="29px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38px"
            android:layout_marginTop="33px"
            android:clickable="true"
            android:src="@drawable/login_icon_close"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imv_close"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignParentRight="true"
            android:clickable="true" />

        <LinearLayout
            android:id="@+id/ll_login01"
            android:layout_width="match_parent"
            android:layout_height="148px"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_regist"
                android:layout_width="200px"
                android:layout_height="70px"
                android:background="@drawable/firstpage_regist_btn_bg_selector"
                android:gravity="center"
                android:text="@string/regist"
                android:textColor="#f72971"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="200px"
                android:layout_height="70px"
                android:layout_marginLeft="75px"
                android:background="@drawable/firstpage_login_btn_bg_selector"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@color/com_white"
                android:textSize="30px" />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25px"
            android:paddingRight="25px"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="100px">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="82px"
                    android:paddingTop="36px"
                    android:text="第一次使用"
                    android:textColor="#444444" />

                <ImageView
                    android:layout_width="700px"
                    android:layout_height="266px"
                    android:scaleType="fitXY"
                    android:src="@drawable/helper01" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24px"
                    android:text="第一次使用方胜智能APP，请确保您的手机号码已在物业业主信息中登记过。如您非业主本人，将需在线申请并获得业主许可后方可使用"
                    android:textColor="#888888"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="82px"
                    android:paddingTop="37px"
                    android:text="上门服务"
                    android:textColor="#444444" />

                <ImageView
                    android:layout_width="700px"
                    android:layout_height="266px"
                    android:scaleType="fitXY"
                    android:src="@drawable/helper02" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24px"
                    android:text="方胜智能背后有一批热忱专业的软硬件工程师在为您提供服务，每位顾客均有一次免费上门服务的机会。"
                    android:textColor="#888888"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="82px"
                    android:paddingTop="37px"
                    android:text="远程遥控"
                    android:textColor="#444444" />

                <ImageView
                    android:layout_width="700px"
                    android:layout_height="266px"
                    android:scaleType="fitXY"
                    android:src="@drawable/helper03" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24px"
                    android:text="只要家中保持WIFI无线网络的畅通，就可通过方胜智能APP远程遥控您的家，而且可支持多套房控制哦。。"
                    android:textColor="#888888"
                    android:textSize="24px" />
            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_login02"
            android:layout_width="match_parent"
            android:layout_height="148px"
            android:background="@color/com_black_transparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_regist02"
                android:layout_width="200px"
                android:layout_height="70px"
                android:background="@drawable/firstpage_regist_btn_bg_selector"
                android:gravity="center"
                android:text="@string/regist"
                android:textColor="#f72971"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_login02"
                android:layout_width="200px"
                android:layout_height="70px"
                android:layout_marginLeft="75px"
                android:background="@drawable/firstpage_login_btn_bg_selector"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@color/com_white"

                android:textSize="30px" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>