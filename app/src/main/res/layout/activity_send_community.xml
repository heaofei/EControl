<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/app_backgroud">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            android:clickable="true"
            android:padding="10px"
            android:text="取消"
            android:textColor="@color/com_white"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25px"
            android:clickable="true"
            android:padding="10px"
            android:text="发送"
            android:textColor="#f72971"
            android:textSize="32px" />
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="这一刻的想法..."
        android:padding="30px"
        android:textColorHint="#cccccc"
        android:maxLength="160"
        android:textSize="28px" />

    <ImageView
        android:id="@+id/imv_pic"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_margin="25px"
        android:scaleType="centerInside"
        android:src="@drawable/ic_add_pic" />

    <RelativeLayout
        android:id="@+id/rl_select_estate"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/white_gray_bg_selector"
        android:clickable="true"
        android:paddingLeft="25px"
        android:paddingRight="25px">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="#e5e5e5" />
        <ImageView

            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:src="@drawable/ic_position" />


        <TextView

            android:id="@+id/tv_estate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80px"
            android:gravity="center"
            android:text="选择所在的小区"
            android:textColor="#444444"
            android:textSize="28px" />

        <ImageView
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#e5e5e5" />

    </RelativeLayout>
</LinearLayout>