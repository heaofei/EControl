<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="280px"
    android:layout_marginBottom="1px"
    android:background="@drawable/layout_radius_white16"
    android:orientation="vertical"
    android:paddingLeft="36px"
    android:layout_marginTop="32px"
    android:layout_marginLeft="40px"
    android:layout_marginRight="40px"
    >

    <TextView
        android:id="@+id/tv_timing_type"
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/text_black_666"
        android:textSize="28px" />

    <View style="@style/view_line"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/com_white"
        android:layout_marginRight="24px"
        android:layout_marginTop="12px"
        >
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@color/text_black_666"
            android:textSize="72px" />

        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="40px"
            android:src="@drawable/icon_btn_off"
            android:textColor="@color/text_black_999"
            android:textSize="28px"
            android:layout_alignParentRight="true"

            />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/center_enter"
            android:gravity="center"
            android:textSize="28px"
            android:visibility="gone"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12px"
        android:text=""
        android:textColor="@color/text_black_999"
        android:textSize="24px"
        android:paddingRight="16px"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/tv_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6px"
        android:paddingRight="16px"
        android:gravity="center"
        android:text=""
        android:textColor="@color/text_black_999"
        android:textSize="24px"
        android:maxLines="1"
        android:ellipsize="end"
        />


</LinearLayout>