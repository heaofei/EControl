<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_white"
    android:orientation="vertical"
    tools:context="com.mxkj.econtrol.view.activity.InformationCommentActivity">

    <include
        android:id="@+id/title"
        layout="@layout/incloud_title_layout2"></include>


    <com.mxkj.econtrol.widget.MyScrollView
        android:id="@+id/serollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_above="@+id/rl_bottom"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="36px"
                android:paddingRight="36px"
                android:paddingTop="36px"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.mxkj.econtrol.widget.CircleImageView
                        android:id="@+id/imv_header_pic"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_no_head"
                        app:border_color="#80e5e5e5"
                        app:border_overlay="true"
                        app:border_width="0px"
                        app:layout_auto_baseheight="width" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26px"
                        android:layout_marginTop="10px"
                        android:layout_toRightOf="@+id/imv_header_pic"
                        android:text=""
                        android:textColor="@color/text_black_999"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_user_name"
                        android:layout_marginLeft="26px"
                        android:layout_marginTop="10px"
                        android:layout_toRightOf="@+id/imv_header_pic"
                        android:text=""
                        android:textColor="@color/text_black_999"
                        android:textSize="24px" />


                    <TextView
                        android:id="@+id/tv_thumbUpCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26px"
                        android:layout_marginRight="36px"
                        android:layout_marginTop="10px"
                        android:text=""
                        android:textColor="@color/text_black_666"
                        android:textSize="24px" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2px"
                    android:layout_marginRight="36px"
                    android:layout_marginTop="30px"
                    android:text=""
                    android:textColor="@color/text_black_666"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_linkcontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="2px"
                    android:layout_marginRight="36px"
                    android:layout_marginTop="30px"
                    android:background="@drawable/layout_radius_grey10"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingBottom="12px"
                    android:paddingLeft="24px"
                    android:paddingRight="24px"
                    android:paddingTop="12px"
                    android:text=""
                    android:textColor="@color/text_black_666"
                    android:textSize="28px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_comment_item"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginBottom="16px"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    style="@style/view_line"
                    android:layout_marginTop="16px"></View>

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16px"
                    android:layout_marginLeft="36px"
                    android:layout_marginTop="16px"
                    android:layout_toRightOf="@+id/imv_header_pic"
                    android:text="评论"
                    android:textColor="@color/text_black_666"
                    android:textSize="30px" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>






        </RelativeLayout>
    </com.mxkj.econtrol.widget.MyScrollView>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <View
            style="@style/view_line"
            ></View>
        <TextView
            android:id="@+id/tv_send_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:hint="说点什么吧..."
            android:text="说点什么吧..."
            android:paddingLeft="8px"
            android:textColor="@color/text_black_c3c3c3"
            android:textColorHint="@color/text_black_c3c3c3"
            android:textSize="28px"
            android:background="@drawable/layout_radius_white12"
            android:layout_toLeftOf="@+id/tv_send_comment"
            android:layout_marginTop="12px"
            android:layout_marginBottom="12px"
            android:layout_marginRight="24px"
            android:layout_marginLeft="32px"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_send_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_black_c3c3c3"
            android:textSize="28px"
            android:visibility="visible"
            android:text="发布"
            android:layout_toRightOf="@+id/iv_collection"
            android:layout_gravity="center_vertical"
            android:paddingTop="12px"
            android:paddingBottom="12px"
            android:paddingRight="32px"
            android:paddingLeft="12px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>


</RelativeLayout>
