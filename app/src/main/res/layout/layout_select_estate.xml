<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_white"
    android:orientation="vertical">


    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/wheel_picker01"
        android:layout_width="700px"
        android:layout_height="wrap_content"
        app:wheel_atmospheric="false"
        app:wheel_curved="false"
        app:wheel_cyclic="false"
        app:wheel_data="@array/missing"
        app:wheel_indicator="true"
        app:wheel_indicator_color="#cccccc"
        app:wheel_indicator_size="2px"
        app:wheel_item_text_color="#cccccc"
        app:wheel_item_text_size="18sp"
        app:wheel_selected_item_text_color="#444444"

        app:wheel_visible_item_count="5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="94px"
        android:background="@drawable/select_house_btn_color_selector"
        android:gravity="center"
        android:text="@string/OK"
        android:textColor="#f72971"
        android:textSize="32px" />
</LinearLayout>
