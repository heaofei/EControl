<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/white_gray_bg_selector"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:background="#e5e5e5e5" />

    <com.mxkj.econtrol.widget.CircleImageView
        android:id="@+id/imv_user_pic"
        android:layout_width="66px"
        android:layout_height="66px"
        android:layout_marginTop="20px"
        app:border_color="#e5e5e5"
        app:border_overlay="true"
        app:border_width="2px"
        android:src="@drawable/ic_no_head"
        app:layout_auto_baseheight="width" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginTop="30px"
        android:layout_toRightOf="@id/imv_user_pic"
        android:text="哈哈:"
        android:textColor="#222222"
        android:textSize="28px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="15px"
        android:layout_marginTop="78px"
        android:layout_toRightOf="@id/imv_user_pic"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reply"
            android:textColor="#888888"
            android:textSize="24px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_reply_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="哈哈:"
            android:textColor="#222222"
            android:textSize="28px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是个评论"
            android:textColor="#888888"
            android:textSize="24px" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="sdfsdf"
        android:textColor="#888888"
        android:textSize="24px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#e5e5e5e5" />
</RelativeLayout>